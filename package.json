{
  "name": "npm-autorelease",
  "version": "1.1.1",
  "description": "Tiny tool for releasing npm modules.",
  "main": "index.js",
  "preferGlobal": true,
  "scripts": {
    "commit": "git-cz"
  },
  "bin": {
    "npm-autorelease": "./bin/npm-autorelease"
  },
  "author": "Johnny Hernandez <johnnyxh@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnnyxh/npm-autorelease.git"
  },
  "bugs": {
    "url": "https://github.com/johnnyxh/npm-autorelease/issues"
  },
  "dependencies": {
    "colors": "~0.6.0-1",
    "conventional-recommended-bump": "^1.0.0",
    "cross-spawn": "^6.0.5",
    "minimist": "^1.2.0",
    "simple-git": "^1.70.0"
  },
  "devDependencies": {
    "commitizen": "^3.0.7",
    "conventional-changelog": "^3.0.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.3.1",
    "validate-commit-msg": "^2.14.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "validate-commit-msg"
    }
  }
}
