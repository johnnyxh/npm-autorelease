{
  "name": "npm-autorelease",
  "version": "1.0.5",
  "description": "Tiny tool for releasing npm modules.",
  "main": "index.js",
  "preferGlobal": true,
  "scripts": {
    "commit": "git-cz",
    "commitmsg": "validate-commit-msg"
  },
  "bin": {
    "npm-autorelease": "./bin/npm-autorelease"
  },
  "author": "Johnny Hernandez <johnnyxh@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/johnnyxh/npm-autorelease.git"
  },
  "bugs": {
    "url": "https://github.com/johnnyxh/npm-autorelease/issues"
  },
  "dependencies": {
    "colors": "~0.6.0-1",
    "conventional-recommended-bump": "^1.0.0",
    "cross-spawn": "^5.1.0",
    "minimist": "^1.2.0",
    "simple-git": "^1.70.0"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "conventional-changelog": "^1.1.3",
    "cz-conventional-changelog": "^2.0.0",
    "husky": "^0.13.3",
    "validate-commit-msg": "^2.12.1"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
