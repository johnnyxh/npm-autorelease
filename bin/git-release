#!/usr/bin/env sh

# taken from https://github.com/visionmedia/git-extras

hook() {
  local hook=.git/hooks/$1.sh
  if test -f $hook; then
    echo "... $1"
    . $hook
  fi
}

echo $@

if test $# -gt 0; then
  # # Possibly using this to push to protected repos
  # gitUrl=$2
  # echo $gitUrl
  # targetRepo=https://$GIT_USER@$GIT_PASS:${gitUrl:8}
  # echo $targetRepo
  hook pre-release
  echo "... pushing $1"
  git push \
    && git push --tags \
    && hook post-release \
    && echo "... complete"
else
  echo "tag required" 1>&2 && exit 1
fi
